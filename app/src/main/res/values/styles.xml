<resources>

	<style name="AppTheme" parent="@android:style/Theme.Material">
		<item name="android:colorPrimary">@color/md_blue_gray_700</item>
		<item name="android:colorPrimaryDark">@color/md_blue_gray_700</item>
		<item name="android:colorAccent">@color/md_yellow_A700</item>

		<item name="android:windowActionBar">false</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowActionBarOverlay">true</item>

		<item name="android:windowBackground">@drawable/gradient_gray</item>

		<item name="android:navigationBarColor">@color/md_blue_gray_700</item>
	</style>

	<style name="AppTheme.Blue" parent="AppTheme">
		<item name="android:colorPrimaryDark">@color/md_blue_700</item>
		<item name="android:windowBackground">@drawable/gradient_blue</item>
		<item name="android:navigationBarColor">@color/md_blue_700</item>
	</style>

	<style name="AppTheme.Gray" parent="AppTheme">
		<item name="android:colorPrimaryDark">@color/md_blue_gray_700</item>
		<item name="android:windowBackground">@drawable/gradient_gray</item>
		<item name="android:navigationBarColor">@color/md_blue_gray_700</item>
	</style>

	<style name="AppTheme.Brown" parent="AppTheme">
		<item name="android:colorPrimaryDark">@color/md_brown_700</item>
		<item name="android:windowBackground">@drawable/gradient_brown</item>
		<item name="android:navigationBarColor">@color/md_brown_700</item>
	</style>

	<style name="AppTheme.DeepOrange" parent="AppTheme">
		<item name="android:colorPrimaryDark">@color/md_deep_orange_800</item>
		<item name="android:windowBackground">@drawable/gradient_deep_orange</item>
		<item name="android:navigationBarColor">@color/md_deep_orange_800</item>
	</style>

	<style name="AppTheme.Pink" parent="AppTheme">
		<item name="android:colorPrimaryDark">@color/md_pink_800</item>
		<item name="android:windowBackground">@drawable/gradient_pink</item>
		<item name="android:navigationBarColor">@color/md_pink_800</item>
	</style>

	<style name="AppTheme.Purple" parent="AppTheme">
		<item name="android:colorPrimaryDark">@color/md_deep_purple_700</item>
		<item name="android:windowBackground">@drawable/gradient_purple</item>
		<item name="android:navigationBarColor">@color/md_deep_purple_700</item>
	</style>

	<style name="AppTheme.Red" parent="AppTheme">
		<item name="android:colorPrimaryDark">@color/md_red_700</item>
		<item name="android:windowBackground">@drawable/gradient_red</item>
		<item name="android:navigationBarColor">@color/md_red_700</item>
	</style>

	<style name="AppTheme.Teal" parent="AppTheme">
		<item name="android:colorPrimaryDark">@color/md_teal_700</item>
		<item name="android:windowBackground">@drawable/gradient_teal</item>
		<item name="android:navigationBarColor">@color/md_teal_700</item>
	</style>

	<style name="AppTheme.Black" parent="AppTheme">
		<item name="android:colorPrimaryDark">@color/md_black_1000</item>
		<item name="android:windowBackground">@color/md_black_1000</item>
		<item name="android:navigationBarColor">@color/md_black_1000</item>
	</style>


	<style name="Button">
		<item name="android:textColor">@color/md_yellow_800F</item>
		<item name="android:textSize">@dimen/text_large</item>
	</style>

	<style name="Widget" parent="@android:style/Widget" />

	<style name="Widget.RaisedButton" parent="@android:style/Widget.Material.Button">
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#414141</item>
		<item name="android:background">@drawable/raised_button_background</item>
		<item name="android:fontFamily">sans-serif</item>
		<item name="android:letterSpacing">0.025</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textSize">@dimen/text_xmedium</item>
		<item name="android:paddingStart">@dimen/spacing_double</item>
		<item name="android:paddingEnd">@dimen/spacing_double</item>
		<item name="android:paddingTop">@dimen/spacing_medium</item>
		<item name="android:paddingBottom">@dimen/spacing_medium</item>
	</style>

	<style name="Widget.BorderlessButton" parent="@android:style/Widget.Material.Button.Borderless">
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#414141</item>
		<item name="android:letterSpacing">0.025</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:paddingStart">24dp</item>
		<item name="android:paddingEnd">24dp</item>
		<item name="android:paddingTop">@dimen/spacing_normal</item>
		<item name="android:paddingBottom">@dimen/spacing_normal</item>
		<item name="android:background">?android:selectableItemBackgroundBorderless</item>
	</style>

	<style name="TextAppearance.DialogTitle" parent="@android:style/TextAppearance.Material.Title">
		<item name="android:textSize">22sp</item>
		<item name="android:gravity">start</item>
	</style>

	<style name="TextAppearance.DialogContent" parent="@android:style/TextAppearance.Material.Body1">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">?android:textColorSecondary</item>
		<item name="android:gravity">start</item>
	</style>

	<style name="Text">
		<item name="android:textColor">@color/text_primary_light</item>
		<item name="android:fontFamily">sans-serif-light</item>
	</style>

	<style name="Text.NormalLabel" parent="Text">
		<item name="android:textSize">@dimen/text_large</item>
	</style>

	<style name="Text.SectionLabel">
		<item name="android:textColor">@color/text_primary_light</item>
		<item name="android:fontFamily">sans-serif-light</item>
		<item name="android:textSize">@dimen/text_xlarge</item>
	</style>
</resources>
